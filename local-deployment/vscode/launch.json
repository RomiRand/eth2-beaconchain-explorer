{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "Debug",
            "type": "pickString",
            "description": "Which app do you want to debug?",
            "options": [
                "explorer",
                "frontend-data-updater",
                "eth1indexer",
                "notification-collector",
                "notification-sender",
                "statistics",
                "rewards-exporter",
            ]
        },
        {
            "id": "Network",
            "type": "pickString",
            "description": "Which network do you want to use?",
            "options": [
                "local",
                "sepolia",
                "sepolia-test",
                "prater",
                "mainnet",
                "gnosis",
                "holesky",
                //...
            ]
        },
    ],
    "configurations": [
        {
            "name": "Attach",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickGoProcess}",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Start app",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/${input:Debug}/main.go",
            "cwd": "${workspaceFolder}",
            "args": [
                "-config",
                "../__gitignore/${input:Network}.config.yml"
            ],
            // TODO cleanup
            "env": {
                "FRONTEND_ENABLED": "true",
                "INDEXER_ENABLED": "true"
            },
        },
    ]
}